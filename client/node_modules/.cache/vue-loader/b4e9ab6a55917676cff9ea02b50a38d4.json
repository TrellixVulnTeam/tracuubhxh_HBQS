    this.items.unshift({\n        sku: '',\n        image: \"main.jpg\",\n        name: \"\",\n        price: \"\",\n        category: \"\",\n        actions: \"\"\n      });\n      this.edit = \"\";\n      this.save = true;\n    },\n    searchData() {\n      this.add = false;\n      this.items.splice(0, 1);\n    }\n  }\n};\n</script>\n\n<style lang=\"scss\" scoped>\ntable.text-center * {\n  text-align: center;\n}\n</style>>"]}]}